<h4>Courses</h4>
<% @courses.each do |course| %>
  <ul class="list-group">
    <li class="list-group-item"><h4>
      <%= link_to course_path(course) do %>
        <%= course.name %>
        <% if course.videos.count + course.quizzes.count == course.views.user_views(current_user).count + course.quiz_scores.user_taken(current_user.id).count %>
          <span class="pull-right text-success"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></span>
        <% end %>
      <% end %>
    </h4></li>
  </ul>
<% end %>